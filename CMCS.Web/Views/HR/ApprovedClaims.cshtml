@model IEnumerable<CMCS.Web.Models.Claim>

@{
    ViewData["Title"] = "Approved Claims";
}

<h2>Approved Claims</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>User</th>
                <th>Claim Month</th>
                <th>Claim Year</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@(claim.User?.FullName ?? claim.User?.Username ?? "N/A")</td>
                    <td>@claim.ClaimMonth</td>
                    <td>@claim.ClaimYear</td>
                    <td>@claim.TotalAmount.ToString("C")</td>
                    <td>@(claim.Status ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No approved claims found.
    </div>
}
