<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid main-container">
                <!-- BRAND: small in corner -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">CMCS</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item me-2">
                            <a class="nav-link nav-btn" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link nav-btn" asp-controller="Claim" asp-action="Index">My Claims</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link nav-btn" asp-controller="Claim" asp-action="Create">Submit Claim</a>
                        </li>
                        <li class="nav-item me-2">
                            <a class="nav-link nav-btn" asp-controller="HR" asp-action="ApprovedClaims">HR: Approved Claims</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="py-4">
        <div class="container main-container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted">
        <div class="container main-container d-flex justify-content-between align-items-center">
            <div>&copy; @DateTime.Now.Year - CMCS</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
