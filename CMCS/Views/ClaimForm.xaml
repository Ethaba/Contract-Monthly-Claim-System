<Window x:Class="CMCS.Views.ClaimForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit New Claim" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9fb">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Submit New Claim"
                   FontSize="24" FontWeight="Bold"
                   Foreground="#2a4365"
                   Margin="0,0,0,20"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="420">
            <TextBlock Text="Month:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <ComboBox x:Name="MonthCombo" Width="250" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="January"/>
                <ComboBoxItem Content="February"/>
                <ComboBoxItem Content="March"/>
                <ComboBoxItem Content="April"/>
                <ComboBoxItem Content="May"/>
                <ComboBoxItem Content="June"/>
                <ComboBoxItem Content="July"/>
                <ComboBoxItem Content="August"/>
                <ComboBoxItem Content="September"/>
                <ComboBoxItem Content="October"/>
                <ComboBoxItem Content="November"/>
                <ComboBoxItem Content="December"/>
            </ComboBox>

            <TextBlock Text="Hours Worked:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <TextBox x:Name="HoursText" Width="250" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Hourly Rate:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <TextBox x:Name="RateText" Width="250" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Notes:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <TextBox x:Name="NotesText" Width="400" Height="80" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

            <TextBlock Text="Supporting Document:" FontWeight="SemiBold" Margin="0,5,0,2"/>
            <Button x:Name="UploadFileButton" Content="Upload File" Width="150" Height="35" Background="#38a169" Foreground="White" Click="UploadFileButton_Click"/>
            <TextBlock x:Name="UploadedFileName" Margin="6,6,0,0" Foreground="#2a4365"/>
        </StackPanel>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SubmitButton" Content="Submit Claim" Width="140" Height="40" Background="#2b6cb0" Foreground="White" FontWeight="SemiBold" Margin="5" Click="SubmitButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="140" Height="40" Background="#e53e3e" Foreground="White" FontWeight="SemiBold" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
