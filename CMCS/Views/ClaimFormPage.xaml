<Page x:Class="CMCS.Views.ClaimFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Submit Claim" Background="#f9f9fb">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Submit New Claim" FontSize="24" FontWeight="Bold" Foreground="#2a4365"/>
            <Button Content="Home" Margin="20,0,0,0" Click="Home_Click"/>
        </StackPanel>

        <!-- Form area -->
        <StackPanel Grid.Row="1" Margin="0,12,0,12">
            <WrapPanel Margin="0">
                <StackPanel>
                    <TextBlock Text="Month" FontWeight="SemiBold"/>
                    <ComboBox x:Name="MonthCombo" Width="160" Margin="0,4,0,0">
                        <ComboBoxItem Content="January"/>
                        <ComboBoxItem Content="February"/>
                        <ComboBoxItem Content="March"/>
                        <ComboBoxItem Content="April"/>
                        <ComboBoxItem Content="May"/>
                        <ComboBoxItem Content="June"/>
                        <ComboBoxItem Content="July"/>
                        <ComboBoxItem Content="August"/>
                        <ComboBoxItem Content="September"/>
                        <ComboBoxItem Content="October"/>
                        <ComboBoxItem Content="November"/>
                        <ComboBoxItem Content="December"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="Year" FontWeight="SemiBold"/>
                    <TextBox x:Name="YearText" Width="120" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Margin="20,0,0,0">
                    <TextBlock Text="Notes" FontWeight="SemiBold"/>
                    <TextBox x:Name="NotesText" Width="300" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,4,0,0"/>
                </StackPanel>
            </WrapPanel>

            <TextBlock Text="Claim Items" FontWeight="Bold" Margin="0,12,0,6"/>
            <DataGrid x:Name="DataGridItems" AutoGenerateColumns="False" CanUserAddRows="False" Height="220">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description, Mode=TwoWay}" Width="*"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked, Mode=TwoWay, StringFormat=N2}" Width="120"/>
                    <DataGridTextColumn Header="Rate" Binding="{Binding HourlyRate, Mode=TwoWay, StringFormat=N2}" Width="120"/>
                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, Mode=OneWay, StringFormat=N2}" Width="120" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Button Content="Add Item" Width="100" Click="AddItem_Click" Margin="4"/>
                <Button Content="Remove Selected" Width="140" Click="RemoveItem_Click" Margin="4"/>
                <TextBlock Text="Total: " FontWeight="Bold" VerticalAlignment="Center" Margin="12,0,0,0"/>
                <TextBlock x:Name="TotalText" FontWeight="Bold" VerticalAlignment="Center" Margin="4,0,0,0"/>
            </StackPanel>

            <TextBlock Text="Supporting Documents" FontWeight="Bold" Margin="0,12,0,6"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add Files" Click="AddFiles_Click" Width="120"/>
                <ListBox x:Name="FilesList" Width="400" Height="80" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Submit Claim" Width="140" Height="36" Margin="6" Click="Submit_Click" Background="#2b6cb0" Foreground="White"/>
            <Button Content="Cancel" Width="120" Height="36" Margin="6" Click="Cancel_Click" Background="#e53e3e" Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
