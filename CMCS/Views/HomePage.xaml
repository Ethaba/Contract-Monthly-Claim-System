<Page x:Class="CMCS.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home"
      Background="#f6f8fb">

    <Grid Margin="18" >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Welcome back," FontSize="16" Foreground="#4a5568"/>
                <TextBlock x:Name="WelcomeName" Text="Lecturer" FontSize="26" FontWeight="Bold" Foreground="#1f3a5f"/>
            </StackPanel>

            <!-- small subtitle on the right -->
            <TextBlock Text="Contract Monthly Claim System" FontSize="14" Foreground="#718096" VerticalAlignment="Center" Margin="18,8,0,0"/>
        </StackPanel>

        <!-- Main content: two columns -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1.1*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT: Quick actions + Recent Claims -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,12,0">

                <!-- Quick actions card -->
                <Border Background="White" CornerRadius="8" Padding="14" Margin="0,0,0,12" BorderBrush="#e2e8f0" BorderThickness="1" >
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" Foreground="#2a4365"/>
                        <WrapPanel Margin="0,10,0,0">
                            <Button Content="Submit New Claim" Width="160" Height="40" Margin="6" Click="GoClaimForm_Click" Background="#2b6cb0" Foreground="White"/>
                            <Button Content="My Claims" Width="140" Height="40" Margin="6" Click="GoLecturer_Click"/>
                            <Button Content="Pending (Coordinator)" Width="180" Height="40" Margin="6" Click="GoCoordinator_Click"/>
                            <Button Content="Pending (Manager)" Width="160" Height="40" Margin="6" Click="GoManager_Click"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Recent claims card -->
                <Border Background="White" CornerRadius="8" Padding="14" BorderBrush="#e2e8f0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Recent Claims" FontSize="18" FontWeight="SemiBold" Foreground="#2a4365" />
                        <TextBlock Text="Latest claims submitted by the current user" FontSize="12" Foreground="#718096" Margin="0,4,0,8"/>
                        <DataGrid x:Name="RecentClaimsGrid" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column"
                                  Height="260" AlternatingRowBackground="#f7fafc" BorderThickness="0" RowBackground="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Width="70" Binding="{Binding ClaimId}"/>
                                <DataGridTextColumn Header="Month" Width="90" Binding="{Binding ClaimMonth}"/>
                                <DataGridTextColumn Header="Year" Width="80" Binding="{Binding ClaimYear}"/>
                                <DataGridTextColumn Header="Total" Width="100" Binding="{Binding TotalAmount, StringFormat=N2}"/>
                                <DataGridTextColumn Header="Status" Width="120" Binding="{Binding Status}"/>
                                <DataGridTemplateColumn Header=" " Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="View" Width="60" Height="24" Tag="{Binding ClaimId}" Click="ViewClaim_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="See all" Width="100" Height="32" Click="GoLecturer_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- RIGHT: Profile, stats, tips -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="12,0,0,0">

                <!-- Profile card -->
                <Border Background="White" CornerRadius="8" Padding="14" Margin="0,0,0,12" BorderBrush="#e2e8f0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Profile" FontSize="16" FontWeight="SemiBold" Foreground="#2a4365"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock x:Name="ProfileName" FontSize="16" FontWeight="Bold"/>
                                <TextBlock x:Name="ProfileRole" FontSize="13" Foreground="#718096"/>
                                <TextBlock x:Name="ProfileEmail" FontSize="12" Foreground="#94a3b8" Margin="0,6,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Stats Card -->
                <Border Background="White" CornerRadius="8" Padding="14" Margin="0,0,0,12" BorderBrush="#e2e8f0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Quick Stats" FontSize="16" FontWeight="SemiBold" Foreground="#2a4365"/>
                        <UniformGrid Columns="2" Margin="0,10,0,0">
                            <Border Background="#fafcff" Padding="10" Margin="6" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="Claims Submitted" FontSize="12" Foreground="#4a5568"/>
                                    <TextBlock x:Name="StatSubmitted" Text="0" FontSize="18" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#fafcff" Padding="10" Margin="6" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="Pending" FontSize="12" Foreground="#4a5568"/>
                                    <TextBlock x:Name="StatPending" Text="0" FontSize="18" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <!-- Tips Card -->
                <Border Background="White" CornerRadius="8" Padding="14" BorderBrush="#e2e8f0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Helpful Tips" FontSize="16" FontWeight="SemiBold" Foreground="#2a4365"/>
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="• Use 'Submit New Claim' to add a detailed claim with multiple items." TextWrapping="Wrap" Margin="0,4,0,0"/>
                            <TextBlock Text="• Attach PDFs, .docx or .xlsx as supporting documents." TextWrapping="Wrap" Margin="0,4,0,0"/>
                            <TextBlock Text="• Coordinators and Managers can verify and approve claims from their dashboards." TextWrapping="Wrap" Margin="0,4,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</Page>
