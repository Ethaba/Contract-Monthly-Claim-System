<Page x:Class="CMCS.Views.CoordinatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Coordinator Dashboard" Background="#f9f9fb">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Programme Coordinator Dashboard" FontSize="24" FontWeight="Bold" Foreground="#2a4365"/>
            <Button Content="Home" Margin="20,0,0,0" Click="Home_Click"/>
        </StackPanel>

        <DataGrid x:Name="DataGridPending" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                  AlternatingRowBackground="#edf2f7" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Width="100" Binding="{Binding ClaimId}"/>
                <DataGridTextColumn Header="Lecturer" Width="200" Binding="{Binding User.FirstName}"/>
                <DataGridTextColumn Header="Month" Width="100" Binding="{Binding ClaimMonth}"/>
                <DataGridTextColumn Header="Year" Width="80" Binding="{Binding ClaimYear}"/>
                <DataGridTextColumn Header="Total" Width="120" Binding="{Binding TotalAmount, StringFormat=N2}"/>
                <DataGridTextColumn Header="Status" Width="120" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Verify Claim" Width="140" Height="38" Margin="5" Click="VerifyClaim_Click" Background="#2b6cb0" Foreground="White"/>
            <Button Content="Request Revision" Width="140" Height="38" Margin="5" Click="RequestRevision_Click" Background="#e53e3e" Foreground="White"/>
            <Button Content="Refresh" Width="100" Height="38" Margin="5" Click="Refresh_Click"/>
        </StackPanel>
    </Grid>
</Page>
