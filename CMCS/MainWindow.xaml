<Window x:Class="CMCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CMCS.Views"
        Title="Contract Monthly Claim System (CMCS)" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Header -->
        <StackPanel DockPanel.Dock="Top" Background="#2C3E50" Orientation="Horizontal" Height="60">
            <TextBlock Text="CMCS Prototype" FontSize="24" Foreground="White"
                       VerticalAlignment="Center" Margin="15,0,0,0"/>
        </StackPanel>

        <!-- Left navigation menu -->
        <StackPanel DockPanel.Dock="Left" Width="220" Background="#ECF0F1">
            <Button Content="Lecturer Dashboard" Name="btnLecturer" Margin="10" Height="40"/>
            <Button Content="Submit Claim" Name="btnClaimForm" Margin="10" Height="40"/>
            <Button Content="Coordinator Dashboard" Name="btnCoordinator" Margin="10" Height="40"/>
            <Button Content="Manager Dashboard" Name="btnManager" Margin="10" Height="40"/>
        </StackPanel>

        <!-- Main content area -->
        <ContentControl Name="MainContent" Margin="10"/>
    </DockPanel>
</Window>
