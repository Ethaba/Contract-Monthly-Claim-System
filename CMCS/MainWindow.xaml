<Window x:Class="CMCS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS - Contract Monthly Claim System" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9fb">

    <Window.Resources>
        <!-- Custom Button Style with Edge Hover Effect -->
        <Style x:Key="EdgeHoverButton" TargetType="Button">
            <Setter Property="Background" Value="#2b6cb0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#2b6cb0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="10,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect: edges light up -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#63b3ed"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                
                            </Trigger>
                            <!-- Pressed effect: button filled -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2b6cb0"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2b6cb0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <!-- Header -->
            <TextBlock Text="Contract Monthly Claim System"
                       FontSize="26" FontWeight="Bold" 
                       Foreground="#2a4365" Margin="0,0,0,30" TextAlignment="Center"/>

            <!-- Buttons with edge-hover style -->
            <Button Content="Lecturer Dashboard" 
                    Style="{StaticResource EdgeHoverButton}" 
                    Click="LecturerDashboard_Click"/>

            <Button Content="Programme Coordinator Dashboard" 
                    Style="{StaticResource EdgeHoverButton}" 
                    Click="CoordinatorDashboard_Click"/>

            <Button Content="Academic Manager Dashboard" 
                    Style="{StaticResource EdgeHoverButton}" 
                    Click="ManagerDashboard_Click"/>

            <Button Content="Submit New Claim" 
                    Style="{StaticResource EdgeHoverButton}" 
                    Background="#38a169" BorderBrush="#38a169" 
                    Click="ClaimForm_Click"/>
        </StackPanel>
    </Grid>
</Window>
