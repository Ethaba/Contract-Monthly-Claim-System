<Window x:Class="CMCS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CMCS.Views"
        Title="CMCS - Contract Monthly Claim System" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9fb">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left navigation pane -->
        <StackPanel Grid.Column="0" Background="White" Margin="10" >
            <TextBlock Text="CMCS" FontSize="20" FontWeight="Bold" Foreground="#2a4365" Margin="10"/>
            <StackPanel Orientation="Horizontal" Margin="10,5">
                <TextBlock Text="Current user:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            </StackPanel>
            <ComboBox x:Name="UserSelector" DisplayMemberPath="FirstName" Margin="10" />
            <Button Content="Home" Margin="10" Height="40" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="NavHome_Click"/>
            <Separator Margin="8"/>
            <Button Content="Lecturer Dashboard" Margin="10" Height="40" Click="NavLecturer_Click"/>
            <Button Content="Coordinator Dashboard" Margin="10" Height="40" Click="NavCoordinator_Click"/>
            <Button Content="Manager Dashboard" Margin="10" Height="40" Click="NavManager_Click"/>
            <Button Content="Submit New Claim" Margin="10" Height="40" Click="NavClaimForm_Click" Background="#38a169" Foreground="White"/>
            <StackPanel VerticalAlignment="Bottom" Margin="10" >
                <TextBlock Text=" " Height="200"/>
                <TextBlock Text="Tip: select user then use navigation" FontStyle="Italic" FontSize="12" Foreground="#666" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <!-- Main content frame -->
        <Frame x:Name="MainFrame" Grid.Column="1" Margin="12" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
